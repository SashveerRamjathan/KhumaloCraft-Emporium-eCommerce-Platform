@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>

    h3 {
        color:white;
    }

    label {
        color: white;
    }

</style>

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label" style="color: black;"></label>
            </div>
            @* <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div> *@
            @if (User.IsInRole("Artist"))
            {
                <div class="form-group">
                    <label asp-for="Input.ArtistName" class="form-label">Name</label>
                    <input asp-for="Input.ArtistName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Input.ArtistPicture" class="form-label">Profile Picture</label>
                    <input asp-for="Input.ArtistPicture" type="file" class="form-control" accept="image/*" />
                </div>
                <div class="form-group">
                    <label asp-for="Input.Description" class="form-label">Description</label>
                    <textarea asp-for="Input.Description" class="form-control"></textarea>
                </div>
            }
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
