@model List<Order>

@{
    ViewData["Title"] = "Orders";
}

<style>
    h1 {
        color: white;
    }

    table {
        color: white;
    }

    thead {
        color: white;
    }

    tr {
        color: white;
    }

    th {
        color: white;
    }

    hr {
        color: white;
    }

    p {
		color: white;
	}

</style>

@if (User.IsInRole("Artist"))
{
    <h1>Product Orders</h1>
}
else
{
    <h1>Orders</h1>
}

<hr />
<p>Please refresh the page to update your list of orders</p>
<hr />

<br />
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.OrderTotalAmount.ToString("C")</td>
                <td>@order.OrderStatus</td>
                <td>
                    <form asp-action="OrderDetails" asp-route-orderId="@order.OrderId">
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-info-circle-fill"></i> Details
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
