@model ST10361554_CLDV6211_POE_Part_2.Models.Craftwork

@{
    ViewData["Title"] = "Details";
}

<style>

    h1 {
        color: white;
    }

    h4 {
        color: white;
    }

    hr {
        color: white;
    }

    div {
        color: white;
    }

</style>

<h1>Details</h1>

<div>
    <h4>Craftwork</h4>
    <div>
        <button type="submit" class="btn btn-light" title="View Categories">
            <a asp-controller="CraftworkCategories" asp-action="Index">
                Click here to view the list of all categories
            </a>
        </button>
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CraftworkName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CraftworkName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CraftworkDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CraftworkDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CraftworkPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CraftworkPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CraftworkQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CraftworkQuantity)
        </dd>
        <dt class = "col-sm-2">
            <label>Craftwork Picture</label>
        </dt>
        <dd class = "col-sm-10">
            @{
                string base64Image = "-1";
                if (Model.CraftworkPictureData != null && Model.CraftworkPictureData.Length > 0)
                {
                    base64Image = Convert.ToBase64String(Model.CraftworkPictureData);
                }

                if (!base64Image.Equals("-1"))
                {
                    <img src="data:image/jpeg;base64,@base64Image" width="120px" height="120px" />
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist.ArtistId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Artist"))
    {
        <button type="submit" class="btn btn-light" title="Edit">
            <a asp-action="Edit" asp-route-id="@Model?.CraftworkId">
                <i class="bi bi-pencil-fill"></i>
                Edit
            </a>
        </button>
    }

    <button type="submit" class="btn btn-light" title="Back to list">
        <a asp-action="Index">
            <i class="bi bi-arrow-return-left"></i>
            Back to List
        </a>
    </button>

</div>
