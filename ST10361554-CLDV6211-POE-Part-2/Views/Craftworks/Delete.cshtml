<div>
    <h4>Craftwork</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CraftworkName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CraftworkName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CraftworkDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CraftworkDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CraftworkPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CraftworkPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CraftworkQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CraftworkQuantity)
        </dd>
        <dt class = "col-sm-2">
            <label>Craftwork Picture</label>
        </dt>
        <dd class = "col-sm-10">
            @{
                string base64Image = "-1";
                if (Model.CraftworkPictureData != null && Model.CraftworkPictureData.Length > 0)
                {
                    base64Image = Convert.ToBase64String(Model.CraftworkPictureData);
                }

                if (!base64Image.Equals("-1"))
                {
                    <img src="data:image/jpeg;base64,@base64Image" width="120px" height="120px" />
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist.ArtistId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CraftworkId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>

    <br />

    <div>
        <button type="submit" class="btn btn-light" title="Create">
            <a asp-action="Index">
                <i class="bi bi-arrow-return-left"></i>
                Back to List
